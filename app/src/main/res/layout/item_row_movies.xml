<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/posterMovie"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@drawable/poster_a_start_is_born" />

        <TextView
            android:id="@+id/tvItemTitleMovie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/open_sans_semi_bold"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/posterMovie"
            card_view:layout_constraintTop_toTopOf="@+id/posterMovie"
            tools:text="@string/title_catalogue" />

        <TextView
            android:id="@+id/tvItemGenreMovie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/open_sans_regular"
            android:maxLines="1"
            android:textSize="15sp"
            card_view:layout_constraintEnd_toEndOf="@+id/tvItemTitleMovie"
            card_view:layout_constraintStart_toStartOf="@+id/tvItemTitleMovie"
            card_view:layout_constraintTop_toBottomOf="@+id/tvItemTitleMovie"
            tools:text="@string/genre_catalogue" />

        <TextView
            android:id="@+id/tvItemDurationMovie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans_regular"
            card_view:layout_constraintStart_toStartOf="@+id/tvItemGenreMovie"
            card_view:layout_constraintTop_toBottomOf="@+id/tvItemGenreMovie"
            tools:text="@string/duration_catalogue" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>